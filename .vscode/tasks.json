{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build libsc sample",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++11",
				"-fdiagnostics-color=always",
				"-mmacosx-version-min=11.3",
				"-g",
				"${fileDirname}/*.cpp",
				"-o",
				"${workspaceFolder}/sample/server/libsc/outputs/libsc_sample",
				"-I../include",
				"-L../lib/macos",
				"-L../bin/macos",
				"-lsc",
				"-lsc_utils",
				"-lsc_utils_text",
				"-lhps_core"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}